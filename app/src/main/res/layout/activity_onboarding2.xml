<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".OnboardingActivity2">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:src="@drawable/onboarding2"></ImageView>

    <!-- Get Burn -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="꾸준히 할 수 있어요"
        android:textColor="#1D1617"
        android:textSize="24dp"
        android:textStyle="bold"></TextView>

    <!-- Let’s keep burning, to achive yours goals, it hurts only temporarily, if you give up now you will be in pain forever -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="목표를 이루기 위해 고통은 일시적일 뿐 지금 포기하면 계속해서 아픕니다."
        android:textColor="#7B6F72"
        android:textSize="14dp"></TextView>

    <!-- Onboarding Button2 -->
    <androidx.constraintlayout.utils.widget.ImageFilterButton
        android:id="@+id/onboardingButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="100dp"
        android:background="#fff"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:src="@drawable/onboarding_round_button"></androidx.constraintlayout.utils.widget.ImageFilterButton>
</LinearLayout>