<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#EAECEB"
        android:orientation="horizontal"
        android:padding="5dp">

        <!-- RecordList_icon1 -->
        <ImageView
            android:id="@+id/recordList_icon1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:background="@drawable/recordlist1" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="#E6E6E6"
            android:orientation="vertical">

            <!-- RecordList_title1 -->
            <TextView
                android:id="@+id/recordList_title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="Indoor Run"
                android:textColor="#000000"
                android:textSize="17dp"
                android:textStyle="bold" />

            <!-- RecordList_time1 -->
            <TextView
                android:id="@+id/recordList_time1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="35 min"
                android:textColor="#666666"
                android:textSize="17dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="#E6E6E6"
            android:orientation="vertical">

            <!-- RecordList_km1 -->
            <TextView
                android:id="@+id/recordList_km1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="7.12 km"
                android:textColor="#000000"
                android:textSize="17dp"
                android:textStyle="bold" />

            <!-- RecordList_kcal1 -->
            <TextView
                android:id="@+id/recordList_kcal1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="452 kcal"
                android:textColor="#000000"
                android:textSize="17dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#EAECEB"
        android:orientation="horizontal"
        android:padding="5dp">

        <!-- RecordList_icon2 -->
        <ImageView
            android:id="@+id/recordList_icon2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:background="@drawable/recordlist2" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="#E6E6E6"
            android:orientation="vertical">

            <!-- RecordList_title2 -->
            <TextView
                android:id="@+id/recordList_title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="Outdoor Cycle"
                android:textColor="#000000"
                android:textSize="17dp"
                android:textStyle="bold" />

            <!-- RecordList_time2 -->
            <TextView
                android:id="@+id/recordList_time2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="24 min"
                android:textColor="#666666"
                android:textSize="17dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="#E6E6E6"
            android:orientation="vertical">

            <!-- RecordList_km2 -->
            <TextView
                android:id="@+id/recordList_km2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="4.22 km"
                android:textColor="#000000"
                android:textSize="17dp"
                android:textStyle="bold" />

            <!-- RecordList_kcal2 -->
            <TextView
                android:id="@+id/recordList_kcal2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="248 kcal"
                android:textColor="#000000"
                android:textSize="17dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>