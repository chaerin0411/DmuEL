<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hey there,"
        android:textColor="#1D1617"
        android:textSize="16dp"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="회원가입"
        android:textColor="#1D1617"
        android:textSize="20dp"
        android:textStyle="bold"></TextView>

    <EditText
        android:id="@+id/editId"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_corner_edittext"
        android:paddingLeft="10dp"
        android:hint="아이디"></EditText>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editPw"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_corner_edittext"
            android:hint="비밀번호"
            android:paddingLeft="10dp"
            android:inputType="textPassword"></EditText>

        <ImageButton
            android:id="@+id/btnHide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22.5dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_hide"
            android:tag="0"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
        android:id="@+id/editPwCheck"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_corner_edittext"
        android:paddingLeft="10dp"
        android:hint="비밀번호 확인"
        android:inputType="textPassword"></EditText>

        <ImageButton
            android:id="@+id/btnHideAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22.5dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_hide"
            android:tag="0"/>

    </FrameLayout>

    <EditText
        android:id="@+id/editName"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_corner_edittext"
        android:paddingLeft="10dp"
        android:hint="이름"></EditText>

    <EditText
        android:id="@+id/editNick"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_corner_edittext"
        android:paddingLeft="10dp"
        android:hint="닉네임"
        android:inputType="textEmailAddress"></EditText>

    <EditText
        android:id="@+id/editNumber"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_corner_edittext"
        android:paddingLeft="10dp"
        android:hint="전화번호"
        android:inputType="phone"></EditText>

    <!-- Register Button -->
    <TextView
        android:id="@+id/registerButton"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_corner_button"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="15dp"
        android:text="가입하기"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold"></TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/or"></ImageView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="이미 계정이 있나요? 로그인"
        android:textColor="#1D1617"
        android:textSize="14dp"></TextView>

</LinearLayout>